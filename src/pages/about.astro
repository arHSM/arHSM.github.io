        hidden: false,
    },
    Twitter: {
        username: "_arHSM",
        link: "https://twitter.com/_arHSM",
        hidden: false,
    },
    Mastodon: {
        username: "@arhsm@mastodon.social",
        link: "https://mastodon.social/@arhsm",
        hidden: false,
    },
    Bluesky: {
        username: "arhsm.cat",
        link: "https://bsky.app/profile/arhsm.cat",
        hidden: false,
    },
    Reddit: {
        username: "arHSM",
