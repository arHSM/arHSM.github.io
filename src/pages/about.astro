import ThemedImage from "@components/ThemedImage.astro";
import Base from "@layouts/Base.astro";
import styles from "@styles/about.module.css";

interface Social {
    username: string;
    link: string;
    hidden: boolean;
}

const socials: Record<Socials, Social> = {
    Email: {
        username: "[anything]@arhsm.cat",
        link: "mailto:arHSM%20<contact@arhsm.cat>",
        hidden: false,
    },
    GitHub: {
        username: "arHSM",
        link: "https://github.com/arHSM",
        hidden: false,
    },
    Gitlab: {
